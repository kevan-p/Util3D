<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.se319s18a9.util3d.Fragments.CreateProjectFragment">

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/s_fragment_createProject_title"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:hint="@string/s_fragment_createProject_editText_hint_projectName"
        android:id="@+id/fragment_createProject_editText_projectName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"/>

    <EditText
        android:hint="@string/s_fragment_createProject_editText_hint_location"
        android:id="@+id/fragment_createProject_editText_location"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp" />

    <Spinner
        android:id="@+id/fragment_createProject_spinner_utilites"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:entries="@array/s_fragment_createProject_spinner_utilities"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <EditText
        android:hint="@string/s_fragment_createProject_editText_hint_organization"
        android:id="@+id/fragment_createProject_editText_organization"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:paddingEnd="16sp"
        android:paddingStart="16sp" />

    <View
        android:layout_height="8dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_height="match_parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/fragment_createProject_button_create"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/s_fragment_createProject_button_create"/>

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/fragment_createProject_button_cancel"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/s_fragment_createProject_button_cancel" />

    </LinearLayout>

</LinearLayout>
